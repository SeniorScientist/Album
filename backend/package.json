{
  "name": "backend",
  "version": "1.0.0",
  "description": "express backend for album",
  "main": "",
  "scripts": {
    "lint": "tslint -c \"./tslint.json\" -p \"./tsconfig.json\"",
    "clean": "rimraf ./dist && rimraf ./build && mkdirp build",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "start": "npm run start:dev",
    "start:dev": "npm run build:tsoa && npm run env:dev ts-node-dev --respawn ./src",
    "start:prod": "npm run env:prod node ./dist/src/index.js",
    "build:routes": "tsoa routes-and-spec",
    "build:swagger": "tsoa swagger --basePath /service",
    "build:tsoa": "npm run clean && npm run build:routes && npm run build:swagger",
    "build:prod": "npm run build:tsoa && tsc && npm run copy",
    "build": "npm run build:prod",
    "copy": "npm run copy:swagger && npm run copy:env",
    "copy:swagger": "cp -R ./build/swagger ./dist/build/swagger",
    "copy:env": "cp -R ./src/config/env ./dist/src/config/env",
    "env:dev": "cross-env NODE_ENV=development",
    "env:test": "cross-env NODE_ENV=test",
    "env:prod": "cross-env NODE_ENV=production"
  },
  "nodemonConfig": {
    "exec": "ts-node src/server.ts",
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "build/**"
    ],
    "delay": 1000
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SeniorScientist/Album.git"
  },
  "keywords": [
    "express",
    "mongoose",
    "firbase",
    "authentication"
  ],
  "author": "Mad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SeniorScientist/Album/issues"
  },
  "homepage": "https://github.com/SeniorScientist/Album#readme",
  "dependencies": {
    "axios": "^1.6.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "inversify-binding-decorators": "^4.0.0",
    "jest": "^29.7.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.1",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongo-sanitize": "^1.0.3",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.0.0-alpha.6",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
